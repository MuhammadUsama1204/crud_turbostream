<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4>Chatgroup</h4>
        </div>
        <div class="card-body" id="allmessages">
          <% @messages.each do |message| %>
            <%= render message %>
          <% end %>
        </div>
        <div class="card-footer new_message">
          <div id="new_message">
            <%= render partial: "messages/form", locals: { message: Message.new } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
